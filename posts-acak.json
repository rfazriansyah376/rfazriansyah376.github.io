---
layout: null
permalink: /posts-acak.json
---
[
  {% assign all_posts = site.posts %}
  {% for i in (1..50) %}
    {% assign random_index = "now" | date: "%N" | modulo: all_posts.size %}
    {% assign post = all_posts[random_index] %}
    {% unless processed_ids contains post.id %}
      {% assign processed_ids = processed_ids | append: post.id | append: "," %}
      {
        "title": {{ post.title | jsonify }},
        "url": {{ post.url | jsonify }},
        "excerpt": {{ post.excerpt | default: post.content | strip_html | truncatewords: 20 | jsonify }}
      }{% unless forloop.last %},{% endunless %}
    {% endunless %}
  {% endfor %}
]
